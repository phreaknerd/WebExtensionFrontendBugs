{

  "manifest_version": 2,
  "name": "WebExtensionFrontendBugs",
  "version": "1.0.0",

  "applications": {
    "gecko": {
      "id": "webextensionfrontendbugs@cnielsen.de"
    }
  },

  "description": "Demonstrating bugs in WebExtension Frontend",

  "permissions": [
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Test popup",
    "default_icon": {
      "48": "icons/logo_gr_48.png"
    },
    "default_popup": "popup.html",
    "browser_style": false 
  }

}
